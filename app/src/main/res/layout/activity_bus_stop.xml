<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_busstop"
    android:weightSum="1">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/bus_speak"
            android:src="@drawable/busstop_q"
            android:layout_width="wrap_content"
            android:layout_height="151dp" />

    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/dongjak" />

        <ImageView
            android:id="@+id/red152b"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/red152b"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:id="@+id/blue152"
            android:layout_width="176dp"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_weight="0.09"
            android:src="@drawable/blue152" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/heaha" />

        <ImageView
            android:id="@+id/red152"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/red152"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:id="@+id/green5517"
            android:layout_width="176dp"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_weight="0.09"
            android:src="@drawable/green5517" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/sadang" />

        <ImageView
            android:id="@+id/green5521"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/green5521"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:id="@+id/blue5521"
            android:layout_width="176dp"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_weight="0.09"
            android:src="@drawable/blue5521" />

    </GridLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:textSize="40dp" />


</LinearLayout>