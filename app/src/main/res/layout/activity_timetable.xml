<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/timetable_background"
    android:weightSum="1">

    <ImageView
        android:id="@+id/timetable_speak"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:src="@drawable/timetable_speak"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/timetable"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="0.54"
        android:src="@drawable/timetable"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_show11"
            android:layout_width="85dp"
            android:layout_height="140dp"
            android:layout_marginRight="3dp"
            />
        <ImageView
            android:id="@+id/img_show22"
            android:layout_width="85dp"
            android:layout_height="140dp"
            android:layout_marginRight="3dp"/>
        <ImageView
            android:id="@+id/img_show33"
            android:layout_width="85dp"
            android:layout_height="140dp"
            android:layout_marginRight="3dp"/>
        <ImageView
            android:id="@+id/img_show44"
            android:layout_width="85dp"
            android:layout_height="140dp"
            android:layout_marginRight="3dp"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_show55"
                android:layout_width="85dp"
                android:layout_height="140dp"
                android:layout_marginRight="3dp"
               />
            <ImageView
                android:id="@+id/img_show66"
                android:layout_width="85dp"
                android:layout_height="140dp"
                android:layout_marginRight="3dp"/>
            <ImageView
                android:id="@+id/img_show77"
                android:layout_width="85dp"
                android:layout_height="140dp"
                android:layout_marginRight="3dp"/>

        </LinearLayout>
    </LinearLayout>
    <!-- -->



    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/club"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/club"
            />

        <ImageView
            android:id="@+id/science"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/science" />

        <ImageView
            android:id="@+id/korea"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/korea" />

        <ImageView
            android:id="@+id/math"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/math" />

        <ImageView
            android:id="@+id/java"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/java" />

        <ImageView
            android:id="@+id/design"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/design" />

        <ImageView
            android:id="@+id/psy"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/psy" />

    </LinearLayout>

</RelativeLayout>
